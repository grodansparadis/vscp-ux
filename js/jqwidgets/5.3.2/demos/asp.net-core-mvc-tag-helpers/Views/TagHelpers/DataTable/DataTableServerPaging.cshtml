@model IEnumerable<jQWidgets.AspNet.Core.Models.SalesEmployee>
@using jQWidgets.AspNetCore.Mvc.TagHelpers;
@{
    ViewData["Title"] = "ASP .NET MVC DataTable Server Paging, Sorting and Filtering Example";
}
@{
    var employee = Model.FirstOrDefault();
}
<label>ASP .NET Core MVC DataTable Server Paging Example</label><br/><br/>
<jqx-datatable id="grid" serverProcessing="true" altrows="true" filterable="true" pageable="true" sourceId="@(employee.ID)" theme="@ViewData["Theme"]" sortable="true" width="850" sourceRoot="Employees" sourceTotalRecords="TotalRecords" sourceUrl="@Url.Action("GetPageData","TagHelpers")" sourceModel="@employee">
    <jqx-datatable-columns>
        <jqx-datatable-column dataField-for="@(employee.FirstName)" width="150" text="First Name"></jqx-datatable-column>
        <jqx-datatable-column dataField-for="@(employee.LastName)" width="150" text="Last Name"></jqx-datatable-column>
        <jqx-datatable-column dataField-for="@(employee.ProductName)" width="250" text="Product Name"></jqx-datatable-column>
        <jqx-datatable-column dataField-for="@(employee.Price)" width="100" text="Price" cellsformat="c2" cellsalign="HorizontalAlignment.Right"></jqx-datatable-column>
        <jqx-datatable-column dataField-for="@(employee.Quantity)" width="100" text="Quantity" cellsalign="HorizontalAlignment.Right"></jqx-datatable-column>
        <jqx-datatable-column dataField-for="@(employee.Total)" width="100" text="Total" cellsformat="c2" cellsalign="HorizontalAlignment.Right"></jqx-datatable-column>
 </jqx-datatable-columns>
</jqx-datatable>