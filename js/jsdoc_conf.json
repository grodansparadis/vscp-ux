{
    "tags": {
        "allowUnknownTags": true
    },
    "source": {
        "include": [ "vscp.js", "vscpMdf.js", "vscpMeasurement.js", "vscpRegister.js", "vscpService.js", "vscpWidgets.js", "vscpWizard.js" ]
    },
    "plugins": ["node_modules/jsdoc/plugins/underscore.js"],
    "templates": {
        "cleverLinks": false,
        "monospaceLinks": true,
        "systemName": "remoteFileExplorer",
        "footer": "Created by Andreas Merkle",
        "copyright": "2015",
        "navType": "vertical",
        "theme": "spacelab",
        "linenums": true,
        "collapseSymbols": true,
        "inverseNav": false
    },
    "opts": {
        "encoding": "utf8",
        "destination": "docs/js",
        "recurse": true,
        "private": false
    }
}
