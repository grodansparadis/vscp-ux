.iziToast
  &.iziToast-color-dark
    background #565C70
    border-color #565C70
    & strong
      color white
    & p
      color rgba(255, 255, 255, 0.7)
      font-weight 300
    & .iziToast-close
      background url('data:image/png;base64,') no-repeat 50% 50%
      background-size 8px
    & .iziToast-icon
      color white
    & strong
      font-weight 500
    & .iziToast-buttons button, & .iziToast-buttons a
      color rgb(255, 255, 255)
      background rgba(255, 255, 255, 0.1)
      &:hover
        background rgba(255, 255, 255, 0.2)

  &.iziToast-color-red
    background rgba(243, 186, 189, 0.85)
    border-color rgba(243, 186, 189, 0.85)
  &.iziToast-color-yellow
    background rgba(243, 237, 172, 0.85)
    border-color rgba(243, 237, 172, 0.85)
  &.iziToast-color-blue
    background rgba(181, 225, 249, 0.85)
    border-color rgba(181, 225, 249, 0.85)
  &.iziToast-color-green
    background rgba(180, 241, 196, 0.85)
    border-color rgba(180, 241, 196, 0.85)
  
  /*
  * EXAMPLE new colors
  *
  &.iziToast-color-custom
  */


@media only screen and (min-width: 568px)

  .iziToast
    &.iziToast-color-dark
      &::after
        box-shadow inset 0 -10px 20px -10px rgba(255, 255, 255, 0.3),0 10px 10px -5px rgba(0, 0, 0, 0.25)